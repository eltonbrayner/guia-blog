<!-- Importando partials com EJS -->
<%- include('partials/header.ejs') %> <%- include('partials/homenavbar.ejs') %>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1 class="display-4">Bem vindo</h1>
      <p class="lead">Este é um simples blog de estudo</p>
      <hr class="my-4" />
      <p>Blog criado através de estudos com NodeJS</p>
    </div>
    <% articles.forEach(element => { %>
    <br />
    <div class="card">
      <div class="card-header"><%= element.title %></div>
      <div class="card-body">
        <a href="/<%= element.slug %>" class="btn btn-success">Ler artigo</a>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>
