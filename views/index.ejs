<!-- Importando partials com EJS -->
<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>

  <div class="container">
    <hr />
    <h1>Perguntas</h1>
    <hr />
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <br />
    <hr />
    <% perguntas.forEach(el => { %>
    <br />
    <div class="card">
      <div class="card-body">
        <h3><%= el.titulo %></h3>
      </div>
      <div class="card-footer">
        <a href="/pergunta/<%= el.id %>" class="btn btn-primary">Responder</a>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('partials/footer.ejs') %>
