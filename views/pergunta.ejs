<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
      <hr />
      <h1><%= pergunta.titulo %></h1>
      <p><%= pergunta.descricao %></p>
    <hr>
    <form method="POST" action="/responder" onsubmit="btnInsert.disabled = true; return true;">
      <h3>Responda</h3>
      <label>Resposta:</label>
      <textarea
        placeholder="Responda aqui"
        required
        class="form-control"
        name="corpo"
      ></textarea>
      <br>
      <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
      <a href="/" class="btn btn-primary">Voltar</a>
      <button class="btn btn-success" type="submit">Responder</button>
    </form>
    <hr>
    <h3>Respostas</h3>
    <hr>
    <% respostas.forEach(el => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= el.corpo %></p>
        </div>
      </div>
    <% }) %>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs') %>
